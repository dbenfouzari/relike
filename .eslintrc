{
  "plugins": [
    "prettier",
    "simple-import-sort",
    "jsx-a11y"
  ],
  "extends": [
    "react-app",
    "react-app/jest",
    "plugin:jsx-a11y/recommended"
  ],
  "overrides": [
    {
      "files": [
        "**/*.stories.*"
      ],
      "rules": {
        "import/no-anonymous-default-export": "off"
      }
    }
  ],
  "rules": {
    "prettier/prettier": "error",
    "simple-import-sort/imports": "error",
    "simple-import-sort/exports": "error",
    "@typescript-eslint/no-unused-vars": "error"
  },
  "ignorePatterns": [
    "node_modules",
    "dist",
    "storybook-static"
  ]
}
