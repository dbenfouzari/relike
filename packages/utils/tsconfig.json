{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "baseUrl": ".",
        "target": "es5",
        "rootDir": "src",
        "outDir": "dist",
        "sourceMap": true,
        "resolveJsonModule": true,
        "composite": true,
        "allowJs": false,
        "declaration": true,
        "declarationMap": true,
        "allowSyntheticDefaultImports": true,
        "noEmit": true
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}