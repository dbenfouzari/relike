{
  "name": "@hastics/components",
  "version": "0.0.1",
  "author": "Donovan BENFOUZARI <d.benfouzari@gmail.com>",
  "bugs": "https://github.com/hastics/hastics/issues",
  "homepage": "https://github.com/hastics/hastics",
  "license": "MIT",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/esm/index.d.ts",
  "files": [
    "/dist"
  ],
  "scripts": {
    "prepare": "yarn hastics generate:index src --exclude hooks,index.ts,introduction.stories.mdx,react-app-env.d.ts,setupTests.ts,types.ts",
    "build:cjs": "babel --source-maps --quiet --root-mode upward src -d dist/cjs --env-name cjs --extensions \".ts,.tsx,.js,.jsx\"",
    "build:esm": "babel --source-maps --quiet --root-mode upward src -d dist/esm --extensions \".ts,.tsx,.js,.jsx\"",
    "build:js": "yarn build:cjs && yarn build:esm",
    "build:ts:esm": "tsc -p tsconfig.build.json",
    "build:ts:cjs": "tsc -p tsconfig.build.json -module commonjs --outDir dist/cjs",
    "build:ts": "yarn build:ts:esm && yarn build:ts:cjs",
    "build": "yarn prepare && npx rimraf dist && yarn build:js && yarn build:ts",
    "storybook:dev": "start-storybook -p 6006 -s public",
    "storybook:build": "build-storybook -s public",
    "storybook:deploy": "storybook-to-ghpages",
    "chromatic": "CI=true npx chromatic --exit-once-uploaded --ci --project-token 97eda06526d3"
  },
  "dependencies": {
    "@popperjs/core": "^2.9.3",
    "classnames": "^2.3.1",
    "core-js": "^3.16.1",
    "lodash.debounce": "^4.0.8",
    "lodash.pull": "^4.1.0",
    "react-jss": "^10.7.1",
    "react-popper": "^2.2.5",
    "styled-components": "^5.3.0",
    "uid": "^2.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.14.8",
    "@babel/core": "^7.15.0",
    "@babel/preset-react": "^7.14.5",
    "@babel/preset-typescript": "^7.15.0",
    "@hastics/cli": "^0.0.1",
    "@mdx-js/react": "^1.6.22",
    "@storybook/addon-actions": "^6.3.7",
    "@storybook/addon-docs": "^6.3.7",
    "@storybook/addon-essentials": "^6.3.7",
    "@storybook/addon-links": "^6.3.7",
    "@storybook/node-logger": "^6.3.7",
    "@storybook/preset-create-react-app": "^3.2.0",
    "@storybook/react": "^6.3.7",
    "@storybook/storybook-deployer": "^2.8.10",
    "@testing-library/react": "^11.1.0",
    "@testing-library/react-hooks": "^7.0.1",
    "@testing-library/user-event": "^12.1.10",
    "@types/jest": "^27.0.1",
    "@types/lodash.debounce": "^4.0.6",
    "@types/lodash.pull": "^4.1.6",
    "@types/mdx-js__react": "^1",
    "@types/node": "^12.0.0",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/react-window": "^1.8.5",
    "@types/styled-components": "^5.1.12",
    "babel-plugin-transform-scss": "^1.0.11",
    "intersection-observer": "^0.12.0",
    "prettier": "^2.3.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-scripts": "4.0.3",
    "react-spring": "^9.2.4",
    "react-window": "^1.8.6",
    "sass": "^1.38.0",
    "typescript": "^4.1.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hastics/hastics.git",
    "directory": "packages/cli"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
