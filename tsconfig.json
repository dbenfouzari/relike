{
  "compilerOptions": {
    "incremental": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "moduleResolution": "Node",
    "module": "esnext",
    "target": "ES2018",
    "sourceMap": true,
    "lib": [
      "ESNext"
    ],
    "noEmit": true,
    "esModuleInterop": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "isolatedModules": true,
    "jsx": "react-jsx"
  },
  "references": [
    {
      "path": "packages/cli"
    },
    {
      "path": "packages/components"
    }
  ],
  "exclude": [
    ".yarn",
    "node_modules",
    "dist",
    "*.d.ts"
  ],
  "include": [
    "src"
  ]
}
